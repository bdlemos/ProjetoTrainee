// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  photo     String?
  role      String
  songs     Song[]
}

model Artist {
  id        Int      @id @default(autoincrement())
  name      String
  streams   Int
  photo     String?
  songs     Song[]
}

model Song {
  id        Int      @id @default(autoincrement())
  name      String
  genre     String
  album     String
  artist    Artist   @relation(fields: [artistId], references: [id])
  artistId  Int
  listeners User[]
  @@unique([name, artistId])
}